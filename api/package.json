{
  "name": "queimad-ai-api",
  "version": "1.0.0",
  "description": "API REST para sistema de detecção de queimadas",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -r dotenv/config src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "download-model": "node scripts/download-model.js",
    "db:init": "node scripts/init-db.js",
    "install:all": "pnpm install && cd ../ai-core && pip install -r requirements.txt"
  },
  "keywords": [
    "ai",
    "fire-detection",
    "computer-vision",
    "brazil",
    "queimadas"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "bull": "^4.10.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "pg-pool": "^3.6.0",
    "redis": "^4.6.5",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.3",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
